---
import '@fontsource/inter';
interface HeroProps {
  title: string;
  subtitle?: string;
  buttonText?: string;
  buttonLink?: string;
  imageUrl?: string;
  arrowsvg?: string;
  rocketsvg?:string;
  svgText?: string;
}

const {
  title = " Engineering for Sustainable Future",
  subtitle = " Discover how our innovative EPC solutions are transforming industries and creating a more sustainable world creating a more sustainable world ",
  buttonText="Get Started",
  buttonLink="#",
  imageUrl="/public/HeroImg.png",
  rocketsvg = "/public/rocket.svg",
  arrowsvg="/public/arrow.svg",
  svgTextRate = "4.8/5.0",
  svgText= " customer rating"
} = Astro.props;
---

<section class="bg-white py-12">
  <div
    class="container mx-auto  px-6 sm:px-6  lg:px-14 grid grid-cols-1 lg:grid-cols-2 items-center gap-16"
  >
   
    <div>
        <span class="flex items-center justify-center lg:justify-start font-medium space-x-2 mb-4">
            <span class="text-sm px-2  py-1 text-black  border-gray-200 border rounded-3xl flex items-center  space-x-2">
              <span class="w-5 h-5   bg-[#072F6A] rounded-full flex items-center justify-center">
                <img src={rocketsvg} alt="icon" class="w-3 h-3" />
              </span>
              <span>{svgTextRate}<span class="text-gray-600">{svgText}</span></span>
            </span>
            </span>
          </span>
          
      <h1 class="text-5xl lg:text-7xl font-bold leading-normal lg:leading-tight text-center lg:text-left text-gray-900 mb-4">
       {title}</span>
      </h1>
      <p class="text-gray-700  text-center sm:text-center md:text-center lg:text-left mb-6 mr-4">
       {subtitle}
      </p>
      <a class=" flex justify-center lg:justify-start" href="">
        <button
          class="flex items-center justify-center font-medium bg-[#072F6A] text-white px-6 py-2 rounded-lg hover:bg-blue-600 space-x-2"
        >
          <span>{buttonText}</span>
          <img src={arrowsvg} alt="arrow" class="w-4 h-4" />
        </button>
      </a>
      
      <div class="flex justify-center lg:justify-start space-x-4 mt-6">
        <span class="flex items-center text-sm text-gray-600">
          <svg
            class="w-4 h-4 text-[#236CF6] mr-2"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.93-10.62L9 13.5l-2.93-2.62a.75.75 0 111.06-1.06L9 11.44l3.87-3.56a.75.75 0 011.06 1.06z"
            ></path>
          </svg>
          Engineering
        </span>
        <span class="flex items-center text-sm text-gray-600">
          <svg
            class="w-4 h-4 text-[#236CF6] mr-2"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.93-10.62L9 13.5l-2.93-2.62a.75.75 0 111.06-1.06L9 11.44l3.87-3.56a.75.75 0 011.06 1.06z"
            ></path>
          </svg>
          Construction
        </span>
        <span class="flex items-center text-sm text-gray-600">
          <svg
            class="w-4 h-4 text-[#236CF6] mr-2 "
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.93-10.62L9 13.5l-2.93-2.62a.75.75 0 111.06-1.06L9 11.44l3.87-3.56a.75.75 0 011.06 1.06z"
            ></path>
          </svg>
          Procurement
        </span>
      </div>
    </div>

    <!-- Right Section -->
    <div class="relative lg:h-[630px] w-full">
      <img
        src={imageUrl}
        class="w-full h-full object-cover object-center rounded-sm shadow-lg"
        alt="Image description"
      />
    </div>
    
      
     
    </div>
  </div>
</section>


