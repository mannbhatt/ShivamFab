<div class="bg-[#A7C5FB] text-[#072F6A]">
  <div class="container mx-auto flex justify-between items-center py-4 px-6">
    <!-- Logo -->
    <div class="flex items-center">
      <img src="/SF_Logo.png" alt="Logo" class="h-4 mr-2" />
      <span class="text-xl font-medium">Shivam Fabrication</span>
    </div>

    <!-- Hamburger Icon for Mobile (Hidden on Desktop) -->
    <button id="hamburgerIcon" class="lg:hidden text-3xl text-[#072F6A]">
      &#9776;
    </button>

    <!-- Navigation Links (Visible on Desktop) -->
    <nav class="hidden lg:flex space-x-6 items-center">
      <a href="/" class="relative text-base font-medium group hover:text-[#072F6A]" id="homeLink">
        Home
        <span class="absolute bottom-0 left-0 w-full h-[2px] bg-[#236CF6] opacity-0 group-hover:opacity-100 lg:block hidden"></span>
      </a>
      <a href="/industryPage" class="relative text-base font-medium group hover:text-[#072F6A]" id="industryLink">
        Industry
        <span class="absolute bottom-0 left-0 w-full h-[2px] bg-[#236CF6] opacity-0 group-hover:opacity-100 lg:block hidden"></span>
      </a>
      <a href="/caseStudyPage" class="relative text-base font-medium group hover:text-[#072F6A]" id="caseStudyLink">
        Case Study
        <span class="absolute bottom-0 left-0 w-full h-[2px] bg-[#236CF6] opacity-0 group-hover:opacity-100 lg:block hidden"></span>
      </a>
      <a href="/servicesPage" class="relative text-base font-medium group hover:text-[#072F6A]" id="servicesLink">
        Services
        <span class="absolute bottom-0 left-0 w-full h-[2px] bg-[#236CF6] opacity-0 group-hover:opacity-100 lg:block hidden"></span>
      </a>
      <a href="/aboutUs" class="relative text-base font-medium group hover:text-[#072F6A]" id="aboutUsLink">
        About Us
        <span class="absolute bottom-0 left-0 w-full h-[2px] bg-[#236CF6] opacity-0 group-hover:opacity-100 lg:block hidden"></span>
      </a>
      <a href="/#ContactUs" class="text-base font-medium text-[#A7C5FB] bg-[#072F6A] py-2 px-6 rounded-lg flex justify-center items-center">
        Get In Touch
      </a>
    </nav>
  </div>
</div>

<!-- Mobile Menu -->
<div id="mobileNavMenu" class="lg:hidden fixed top-0 right-0 bottom-0 bg-[#A7C5FB] bg-opacity-100 z-[900] hidden w-[100%] h-[100vh] flex flex-col justify-between">
  <div class="flex justify-end p-6">
    <button id="closeMenu" class="text-[#236CF6] text-3xl">&times;</button>
  </div>
  <div class="flex flex-col items-start space-y-6 px-6 py-4 w-full h-full overflow-y-auto flex-grow">
    <a href="/" class="relative text-xl font-medium group text-[#236CF6] hover:text-[#072F6A]" id="mobileHomeLink">
      Home
    </a>
    <a href="/industryPage" class="relative text-xl font-medium group text-[#236CF6] hover:text-[#072F6A]" id="mobileIndustryLink">
      Industry
    </a>
    <a href="/caseStudyPage" class="relative text-xl font-medium group text-[#236CF6] hover:text-[#072F6A]" id="mobileCaseStudyLink">
      Case Study
    </a>
    
    <a href="/servicesPage" class="relative text-xl font-medium group text-[#236CF6] hover:text-[#072F6A]" id="mobileServicesLink">
      Services
    </a>
    <a href="/aboutUs" class="relative text-xl font-medium group text-[#236CF6] hover:text-[#072F6A]" id="mobileAboutUsLink">
      About Us
    </a>
    <a href="#ContactUs" class="relative text-xl font-medium group text-[#236CF6] hover:text-[#072F6A]" id="mobileContactUsLink">
      Contact Us
    </a>
  </div>

  <!-- Get in Touch Button at the Bottom -->
  <a href="#ContactUs" class="text-xl font-medium group text-white bg-[#072F6A] py-2 px-6 rounded-none text-center mb-6 mx-4">
    Get In Touch
  </a>
</div>

<script>
  const hamburgerIcon = document.getElementById('hamburgerIcon');
  const mobileNavMenu = document.getElementById('mobileNavMenu');
  const closeMenu = document.getElementById('closeMenu');
  
  if (hamburgerIcon && mobileNavMenu && closeMenu) {
    hamburgerIcon.addEventListener('click', () => {
      mobileNavMenu.classList.toggle('hidden');
      document.body.style.overflow = mobileNavMenu.classList.contains('hidden') ? 'auto' : 'hidden'; // Disable scrolling on body
    });

    closeMenu.addEventListener('click', () => {
      mobileNavMenu.classList.add('hidden');
      document.body.style.overflow = 'auto'; // Re-enable scrolling on body
    });
  }
</script>